class Solution {
public:
    bool hasSpecialSubstring(string s, int k) {
        int n = s.size();
        
        for (int i = 0; i <= n - k; i++) {
            char ch = s[i];
            bool isValid = true;
            
            for (int j = i; j < i + k; j++) {
                if (s[j] != ch) {
                    isValid = false;
                    break;
                }
            }
            
            if (isValid) {
                if ((i == 0 || s[i - 1] != ch) && (i + k == n || s[i + k] != ch)) {
                    return true;
                }
            }
        }
        
        return false;
    }
};
